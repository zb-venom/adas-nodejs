<div class="con-search">
    <div class="row">
        {{#if have}}
            {{#each have}}
                <div class="col">
                    <div class="user-box">                        
                        <form action="/user/edit" method="post">
                            <h5 style="color: white;">Изменить пользователя {{_id}}</h5>
                            <input type="text" value="{{_id}}" name="code" hidden>
                            <hr>
                            <input type="text" value="{{login}}" style="margin: 0;" class="input-simple" name="login" placeholder="Логин" required>
                            <input type="text" value="{{about}}" class="input-simple" name="about" placeholder="Информация" required><br>
                            <input type="email" class="input-simple" value="{{email}}" name="email" placeholder="Мыло" required><br>
                            <input type="text" class="input-simple" value="{{phone}}" name="phone" id="phone" placeholder="Телефон" required><br>
                            <input type="text" class="input-simple" value="{{code}}" name="code" required><br>
                            <h6 style="margin-top: .5rem;">Тип: 
                                <select name="type" class="select-type">
                                    <option value="{{type}}" selected>{{full_type}}</option>
                                    <option value="0">Не подтвержден</option>
                                    <option value="2">Студент</option>
                                    <option value="1">Администратор</option>
                                </select>
                            </h6>
                            <input type="checkbox" name="new_password" id="new_password"><label for="new_password" style="margin-left: .5rem; color: white;">Новый пароль</label>
                            <button type="submit" style="margin-left: 12rem; margin-top: 1rem;" class="save-edit">Save</button>  
                        </form>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="col">
            <div class="device-box">
                <h2>Ошибка.</h2>
                <hr>
                <div class="scroll-about">
                    <code class="red">По вашему запросу ничего не найдено.</code>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>  

<script>
        
$(function(){
  $("#phone").mask('+7(000)-000-00-00');  
});

$("#new_span").click(function(){
    $('#new_span').hide();
    $('#new_form').show();
});

function shure() {
    return confirm("Вы уверены?")  
}
</script>
